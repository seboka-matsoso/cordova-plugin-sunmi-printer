<?xml version="1.0" encoding="UTF-8" ?>
<plugin id="cordova-plugin-zkcservice" version="1.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>SunmiService</name>
    <description>Liink a cordova application to an Sunmi inner printer</description>
    <author>Seboka Matsoso</author>
    <license>MIT</license>
    <keywords>Cordova, Android, Sunmi, W5920, Plugin,POS, Printer</keywords>
    <repo>https://github.com/seboka-matsoso/cordova-plugin-sunmi-printer.git</repo>
    <issue>https://github.com/matsosos/cordova-plugin-sunmi-printer/issues</issue>
   
	<js-module name="SunmiService" src="www/sunmiservice.js">
            <clobbers target="SunmiService" />
    </js-module>
  
    <platform name="android">     
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="SunmiService" >
                <param name="android-package" value="ls.co.sunmi"/>
            </feature>
        </config-file>
        
        <source-file src="src/android/SunmiService.java" target-dir="src/ls/co/sunmiplugin"/>		
        <source-file src="aidl/android/ISunmiService.aidl" target-dir="src/com/smartdevice/aidl"/>
        <source-file src="aidl/android/ICallback.aidl" target-dir="src/com/smartdevice/aidl"/>
        <!-- Hack for Cordova android 7, not correctly loading aidl -->
        <source-file src="aidl/android/ISunmiService.aidl" target-dir="app/src/main/aidl/com/smartdevice/aidl" />
        <source-file src="aidl/android/ICallback.aidl" target-dir="app/src/main/aidl/com/smartdevice/aidl" />
    </platform>
</plugin>
